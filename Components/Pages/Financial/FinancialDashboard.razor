@page "/financial/dashboard"
@attribute [Authorize]

<PageTitle>Dashboard Financeiro - Pillar ERP</PageTitle>

<MudContainer MaxWidth="MaxWidth.ExtraExtraLarge" Class="mt-4">
    <MudText Typo="Typo.h4" Class="mb-4">
        <MudIcon Icon="@Icons.Material.Filled.Dashboard" Class="mr-2" />
        Dashboard Financeiro
    </MudText>

    <MudGrid>
        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4">
                <MudStack Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.CallReceived" Color="Color.Success" Size="Size.Large" />
                    <MudText Typo="Typo.h6">Contas a Receber</MudText>
                    <MudText Typo="Typo.h4">R$ 0,00</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Em desenvolvimento</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4">
                <MudStack Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.CallMade" Color="Color.Error" Size="Size.Large" />
                    <MudText Typo="Typo.h6">Contas a Pagar</MudText>
                    <MudText Typo="Typo.h4">R$ 0,00</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Em desenvolvimento</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4">
                <MudStack Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.Warning" Color="Color.Warning" Size="Size.Large" />
                    <MudText Typo="Typo.h6">Contas em Atraso</MudText>
                    <MudText Typo="Typo.h4">0</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Em desenvolvimento</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>

        <MudItem xs="12" sm="6" md="3">
            <MudPaper Class="pa-4">
                <MudStack Spacing="2">
                    <MudIcon Icon="@Icons.Material.Filled.LocalShipping" Color="Color.Primary" Size="Size.Large" />
                    <MudText Typo="Typo.h6">Fornecedores</MudText>
                    <MudText Typo="Typo.h4">0</MudText>
                    <MudText Typo="Typo.body2" Color="Color.Secondary">Em desenvolvimento</MudText>
                </MudStack>
            </MudPaper>
        </MudItem>
    </MudGrid>

    <MudPaper Class="pa-4 mt-4">
        <MudText Typo="Typo.h6" Class="mb-4">Visão Geral</MudText>
        <MudText Color="Color.Secondary">
            O dashboard financeiro está em desenvolvimento. Em breve você poderá visualizar:
        </MudText>
        <MudList T="string" Dense="true">
            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Gráficos de fluxo de caixa</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Aging list de contas a receber e pagar</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Top fornecedores e clientes</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Análise por categoria financeira</MudListItem>
            <MudListItem T="string" Icon="@Icons.Material.Filled.Check">Comparativo de centros de custo</MudListItem>
        </MudList>
    </MudPaper>
</MudContainer>

