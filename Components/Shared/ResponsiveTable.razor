@* Componente wrapper para tornar tabelas MudBlazor responsivas em mobile *@

<div class="responsive-table-container">
    @if (IsMobile)
    {
        <!-- Mobile: Card View -->
        <div class="mobile-card-list">
            @ChildContent
        </div>
    }
    else
    {
        <!-- Desktop: Table View -->
        @ChildContent
    }
</div>

@code {
    [Parameter]
    public RenderFragment? ChildContent { get; set; }
    
    [Parameter]
    public bool IsMobile { get; set; }
}
