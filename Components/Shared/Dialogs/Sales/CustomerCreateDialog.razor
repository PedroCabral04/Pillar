                                  Variant="Variant.Outlined"
                                  Adornment="Adornment.Start"
                                  AdornmentIcon="@Icons.Material.Filled.Description"/>
                </MudItem>
                <MudItem xs="12" md="5">
                    <MudTextField @bind-Value="_model.MunicipalRegistration" 
