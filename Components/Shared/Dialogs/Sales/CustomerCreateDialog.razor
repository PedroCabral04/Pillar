                    </MudSelect>
                </MudItem>
            </MudGrid>

            <MudDivider Class="my-4" /> -->
            
            <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mb-3">
                <MudIcon Icon="@Icons.Material.Filled.Notes" Size="Size.Small" Class="mr-1" />
                Observações
            </MudText>
            <MudGrid Spacing="3">
                <MudItem xs="12">
                    <MudTextField @bind-Value="_model.Notes" 
                                  Label="Observações"
                                  Variant="Variant.Outlined"
                                  Lines="3"/>
                </MudItem>
            </MudGrid>
        </MudForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@_processing">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
                <text>Salvando...</text>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1"/>
                <text>Salvar Cliente</text>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;

    private MudForm? _form;
    private CreateCustomerDto _model = new();
    private bool _processing = false;

    // Máscara CPF/CNPJ baseada no tipo de pessoa
    private PatternMask _cpfMask = new("000.000.000-00");
    private PatternMask _cnpjMask = new("00.000.000/0000-00");
    private IMask _documentMask = new PatternMask("000.000.000-00");
    private string _documentLabel = "CPF";
    private string _documentPlaceholder = "000.000.000-00";
    private string _nameLabel = "Nome Completo";

    private void OnTypeChanged(CustomerType type)
    {
        _model.Type = type;
        _model.Document = string.Empty; // Limpa o documento ao trocar tipo
        
        if (type == CustomerType.Business)
        {
            _documentMask = _cnpjMask;
            _documentLabel = "CNPJ";
            _documentPlaceholder = "00.000.000/0000-00";
            _nameLabel = "Razão Social";
        }
        else
        {
            _documentMask = _cpfMask;
            _documentLabel = "CPF";
            _documentPlaceholder = "000.000.000-00";
            _nameLabel = "Nome Completo";
        }
    }

    private readonly string[] _brazilianStates = new[]
    {
        "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA",
        "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN",
        "RS", "RO", "RR", "SC", "SP", "SE", "TO"
    };

    private async Task Submit()
    {
        await _form!.Validate();
        if (!_form.IsValid)
        {
            Snackbar.Add("Por favor, corrija os erros no formulário", Severity.Warning);
            return;
        }

        _processing = true;
        try
        {
            // Ensure document contains only digits before submit
            _model.Document = BrazilianDocumentValidator.RemoveFormatting(_model.Document);
            var customer = await ApiService.PostAsync<CustomerDto>("/api/vendas/customers", _model);
            Snackbar.Add("Cliente criado com sucesso!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(customer));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao criar cliente");
            Snackbar.Add($"Erro ao criar cliente: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
