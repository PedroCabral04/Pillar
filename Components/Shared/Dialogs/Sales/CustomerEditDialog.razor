@using erp.DTOs.Sales
@using erp.Services
@using MudBlazor
@using Size = MudBlazor.Size
@using Color = MudBlazor.Color
@inject IApiService ApiService
@inject ISnackbar Snackbar
@inject ILogger<CustomerEditDialog> Logger

<MudDialog>
    <TitleContent>
        <MudStack Row="true" AlignItems="AlignItems.Center" Spacing="2">
            <MudIcon Icon="@Icons.Material.Filled.Edit" Color="Color.Primary" Size="Size.Large" />
            <MudText Typo="Typo.h6">Editar Cliente</MudText>
        </MudStack>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <MudStack AlignItems="AlignItems.Center" Spacing="3" Class="pa-6">
                <MudProgressCircular Color="Color.Primary" Indeterminate="true" Size="Size.Large" />
                <MudText Typo="Typo.body1" Color="Color.Secondary">Carregando dados do cliente...</MudText>
            </MudStack>
        }
        else if (_model != null)
        {
            <MudForm @ref="_form" Model="@_model" Class="pa-2">
                <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.Badge" Size="Size.Small" Class="mr-1" />
                    Dados Principais
                </MudText>
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="8">
                        <MudTextField @bind-Value="_model.Name" 
                                      Label="Nome/Razão Social" 
                                      Required="true"
                                      Immediate="true"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Person"
                                      HelperText="Nome completo ou razão social"/>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudSwitch @bind-Value="_model.IsActive" 
                                   Label="Cliente Ativo"
                                   Color="Color.Success"/>
                    </MudItem>
                </MudGrid>

                <MudDivider Class="my-4" />
                
                <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.ContactPhone" Size="Size.Small" Class="mr-1" />
                    Contato
                </MudText>
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="6">
                        <MudTextField @bind-Value="_model.Email" 
                                      Label="E-mail"
                                      InputType="InputType.Email"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Email"/>
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudTextField @bind-Value="_model.Phone" 
                                      Label="Telefone"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Phone"/>
                    </MudItem>
                    <MudItem xs="12" md="3">
                        <MudTextField @bind-Value="_model.Mobile" 
                                      Label="Celular"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.PhoneAndroid"/>
                    </MudItem>
                </MudGrid>

                <MudDivider Class="my-4" />
                
                <MudText Typo="Typo.subtitle2" Color="Color.Primary" Class="mb-3">
                    <MudIcon Icon="@Icons.Material.Filled.LocationOn" Size="Size.Small" Class="mr-1" />
                    Endereço
                </MudText>
                <MudGrid Spacing="3">
                    <MudItem xs="12" md="3">
                        <MudTextField @bind-Value="_model.ZipCode" 
                                      Label="CEP"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationOn"/>
                    </MudItem>
                    <MudItem xs="12" md="7">
                        <MudTextField @bind-Value="_model.Address" 
                                      Label="Endereço"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.Home"/>
                    </MudItem>
                    <MudItem xs="12" md="2">
                        <MudTextField @bind-Value="_model.Number" 
                                      Label="Número"
                                      Variant="Variant.Outlined"/>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudTextField @bind-Value="_model.Complement" 
                                      Label="Complemento"
                                      Variant="Variant.Outlined"/>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudTextField @bind-Value="_model.Neighborhood" 
                                      Label="Bairro"
                                      Variant="Variant.Outlined"/>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudTextField @bind-Value="_model.City" 
                                      Label="Cidade"
                                      Variant="Variant.Outlined"
                                      Adornment="Adornment.Start"
                                      AdornmentIcon="@Icons.Material.Filled.LocationCity"/>
                    </MudItem>
                    <MudItem xs="12" md="4">
                        <MudSelect @bind-Value="_model.State" 
                                   Label="Estado"
                                   Variant="Variant.Outlined"
                                   Adornment="Adornment.Start"
                                   AdornmentIcon="@Icons.Material.Filled.Map"
                                   AnchorOrigin="Origin.BottomCenter">
                            @foreach (var state in _brazilianStates)
                            {
                                <MudSelectItem Value="@state">@state</MudSelectItem>
                            }
                        </MudSelect>
                    </MudItem>
                </MudGrid>
            </MudForm>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Variant="Variant.Outlined">Cancelar</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="Submit" Disabled="@(_processing || _loading)">
            @if (_processing)
            {
                <MudProgressCircular Size="Size.Small" Indeterminate="true" Class="mr-2"/>
                <text>Salvando...</text>
            }
            else
            {
                <MudIcon Icon="@Icons.Material.Filled.Save" Class="mr-1"/>
                <text>Salvar Alterações</text>
            }
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] private IMudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public int CustomerId { get; set; }

    private MudForm? _form;
    private UpdateCustomerDto? _model;
    private bool _loading = true;
    private bool _processing = false;

    private readonly string[] _brazilianStates = new[]
    {
        "AC", "AL", "AP", "AM", "BA", "CE", "DF", "ES", "GO", "MA",
        "MT", "MS", "MG", "PA", "PB", "PR", "PE", "PI", "RJ", "RN",
        "RS", "RO", "RR", "SC", "SP", "SE", "TO"
    };

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var customer = await ApiService.GetAsync<CustomerDto>($"/api/sales/customers/{CustomerId}");
            if (customer != null)
            {
                _model = new UpdateCustomerDto
                {
                    Name = customer.Name,
                    Email = customer.Email,
                    Phone = customer.Phone,
                    Mobile = customer.Mobile,
                    ZipCode = customer.ZipCode,
                    Address = customer.Address,
                    Number = customer.Number,
                    Complement = customer.Complement,
                    Neighborhood = customer.Neighborhood,
                    City = customer.City,
                    State = customer.State,
                    IsActive = customer.IsActive
                };
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao carregar cliente {CustomerId}", CustomerId);
            Snackbar.Add("Erro ao carregar cliente", Severity.Error);
        }
        finally
        {
            _loading = false;
        }
    }

    private async Task Submit()
    {
        await _form!.Validate();
        if (!_form.IsValid)
        {
            Snackbar.Add("Por favor, corrija os erros no formulário", Severity.Warning);
            return;
        }

        _processing = true;
        try
        {
            var customer = await ApiService.PutAsync<CustomerDto>($"/api/sales/customers/{CustomerId}", _model);
            Snackbar.Add("Cliente atualizado com sucesso!", Severity.Success);
            MudDialog.Close(DialogResult.Ok(customer));
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Erro ao atualizar cliente {CustomerId}", CustomerId);
            Snackbar.Add($"Erro ao atualizar cliente: {ex.Message}", Severity.Error);
        }
        finally
        {
            _processing = false;
        }
    }

    private void Cancel() => MudDialog.Cancel();
}
