# Pillar ERP - Environment Variables Template
# Copy this file to .env and fill in your actual values

# ===== Database Configuration =====
POSTGRES_DB=erp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=ChangeThisSecurePassword123!

# ===== Application Settings =====
ASPNETCORE_ENVIRONMENT=Production

# ===== Security =====
# Optional: API Key for protecting API endpoints
API_KEY=

# ===== AI Configuration =====
# Provider options: openai, google, custom
AI_PROVIDER=custom

# OpenAI Settings (if using AI__Provider=openai)
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o-mini

# Google AI Settings (if using AI__Provider=google)
GOOGLE_AI_API_KEY=
GOOGLE_AI_MODEL=gemini-2.5-flash

# Custom AI Settings (if using AI__Provider=custom)
CUSTOM_AI_ENDPOINT=
CUSTOM_AI_API_KEY=
CUSTOM_AI_MODEL=

# ===== Email Configuration =====
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=
EMAIL_SMTP_PASSWORD=
EMAIL_ENABLE_SSL=true
EMAIL_FROM=noreply@pillarerp.com
EMAIL_FROM_NAME=Pillar ERP

# ===== Coolify Specific (Auto-configured by Coolify) =====
# These are typically set automatically by Coolify
# SERVICE_FQDN_APP_8080=your-domain.com
