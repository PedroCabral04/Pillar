# Pillar ERP - Variáveis de Ambiente
# Copie este arquivo para .env e preencha com seus valores
# ⚠️ NUNCA commit o arquivo .env com credenciais reais

# =============================================================================
 CONFIGURAÇÕES DE AMBIENTE
# =============================================================================
ASPNETCORE_ENVIRONMENT=Production

# =============================================================================
# BANCO DE DADOS
# =============================================================================
# Connection string PostgreSQL (formato padrão ASP.NET Core)
ConnectionStrings__DefaultConnection=Host=localhost;Port=5432;Database=erp;Username=postgres;Password=ChangeThisSecurePassword123!

# Connection string secundária (legado/específica)
DbContextSettings__ConnectionString=Host=localhost;Port=5432;Database=erp;Username=postgres;Password=ChangeThisSecurePassword123!

# Multi-tenancy Database Template
MultiTenancy__Database__TemplateConnectionString=Host=localhost;Port=5432;Database=pillar_{SLUG};Username=postgres;Password=ChangeThisSecurePassword123!

# =============================================================================
# SEGURANÇA
# =============================================================================
# Senha padrão para o usuário administrador
# ⚠️ EM PRODUÇÃO: Defina uma senha forte ou use o sistema de geração automática
Security__DefaultAdminPassword=CHANGE_THIS_PASSWORD_NOW

# Chave de API para proteção adicional (opcional, mas recomendado em produção)
# Gere uma chave forte com: openssl rand -base64 32
Security__ApiKey=
Security__RequireApiKey=false

# CORS - Origens permitidas para requisições cross-origin (separadas por ;)
# Use "*" para permitir qualquer origem (não recomendado em produção)
# Exemplo: https://app.example.com;https://admin.example.com
Security__CorsAllowedOrigins=

# HSTS Max Age em dias (recomendado: 365)
Security__HstsMaxAge=365

# Content Security Policy Report Only (true para testes, false em produção)
Security__CspReportOnly=false

# CSP Report URI para monitoramento de violações (opcional)
# Security__CspReportUri=https://your-csp-report-endpoint.com

# =============================================================================
# EMAIL (SMTP)
# =============================================================================
Email__Enabled=false
Email__SmtpHost=smtp.gmail.com
Email__SmtpPort=587
Email__SmtpUsername=your-email@gmail.com
Email__SmtpPassword=your-app-password
Email__EnableSsl=true
Email__FromEmail=noreply@pillarerp.com
Email__FromName=Pillar ERP

# =============================================================================
# AI SERVICES (Opcional)
# =============================================================================
# Provider: openai, google, custom
AI__Provider=

OpenAI__ApiKey=
OpenAI__Model=gpt-4o-mini

GoogleAI__ApiKey=
GoogleAI__Model=gemini-2.5-flash

CustomAI__Endpoint=
CustomAI__ApiKey=
CustomAI__Model=

# =============================================================================
# DEMO DATA
# =============================================================================
# Desabilitado por padrão em produção
DemoSeed__Enabled=false
DemoSeed__Force=false
DemoSeed__TenantSlug=demo

# =============================================================================
# BOOTSTRAP DATABASE
# =============================================================================
# Define se o banco deve ser criado automaticamente na primeira execução
# Opções: true, false, dropcreate (cuidado!)
DB_BOOTSTRAP=false

# =============================================================================
# DATA PROTECTION (Para ambientes com múltiplas instâncias)
# =============================================================================
# Diretório para persistir chaves de proteção de dados (recomendado: /keys no Docker)
DATAPROTECTION__KEYS_DIRECTORY=/keys

# =============================================================================
# FILE STORAGE
# =============================================================================
# Tamanho máximo de upload em MB
FileStorage__MaxFileSizeMB=10

# =============================================================================
# Coolify Specific (Auto-configured by Coolify)
# =============================================================================
# SERVICE_FQDN_APP_8080=your-domain.com
